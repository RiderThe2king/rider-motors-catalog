                </div>
            </div>
            
            <div class="form-group hidden" id="eventQtyContainer">
                <label class="form-label">Limited Quantity (EVENT)</label>
                <input type="number" id="eventQty" class="form-input" placeholder="Ex: 5">
            </div>
            
            <div class="form-actions">
                <button id="saveButton" class="btn-primary">
                    <i class="fas fa-save"></i> Save Vehicle
                </button>
                <button id="cancelButton" class="btn-secondary hidden">
                    <i class="fas fa-times"></i> Cancel
                </button>
            </div>
        </div>

        <!-- Catalog -->
        <div class="catalogue">
            <div class="catalogue-header">
                <h3 class="catalogue-title">Our Collection</h3>
                <div style="display: flex; gap: 15px; align-items: center;">
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="searchBar" class="search-input" placeholder="Search for a vehicle...">
                    </div>
                    <button class="export-btn" id="exportBtn">
                        <i class="fas fa-download"></i> Export
                    </button>
                </div>
            </div>
            
            <div class="categories" id="categoriesContainer">
                <!-- Categories will be generated here -->
            </div>
            
            <div class="vehicles-grid" id="liste">
                <!-- Vehicles will be displayed here -->
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p>&copy; 2024 Rider Motors. All rights reserved.</p>
            <p class="credits">Created by <a href="https://github.com/RiderTheKTV" target="_blank">RiderTheKTV</a></p>
        </div>
    </div>

    <script>
        // Data and state management
        let vehicules = JSON.parse(localStorage.getItem('vehicules')) || [];
        let favorites = JSON.parse(localStorage.getItem('favorites')) || [];
        let mode = 'guest';
        let activeCategory = 'All';
        let editingId = null;
        const categories = [
            "UTILITY", "HUMVEE", "HYPER", "SPORT", "OFFROAD TRUCK", 
            "SUV", "MUSCLE", "LOWRIDER", "ROADSTER", "LUXURY", 
            "COUPE", "FASTBACK", "CONVERTIBLE", "SEDAN", "HATCH", 
            "CADDY", "WAGON", "VAN", "RV", "TRAILER", "EVENT"
        ];

        // DOM Elements
        const overlay = document.getElementById('overlay');
        const formContainer = document.getElementById('formContainer');
        const formTitle = document.getElementById('formTitle');
        const titreInput = document.getElementById('titre');
        const descInput = document.getElementById('description');
        const prixInput = document.getElementById('prix');
        const catSelect = document.getElementById('categorie');
        const eventQtyContainer = document.getElementById('eventQtyContainer');
        const eventQty = document.getElementById('eventQty');
        const imageInput = document.getElementById('imageInput');
        const saveButton = document.getElementById('saveButton');
        const cancelButton = document.getElementById('cancelButton');
        const listeDiv = document.getElementById('liste');
        const searchBar = document.getElementById('searchBar');
        const categoriesContainer = document.getElementById('categoriesContainer');
        const messageContainer = document.getElementById('message-container');
        const passwordInput = document.getElementById('password');
        const loginBtn = document.getElementById('login-btn');
        const guestBtn = document.getElementById('guest-btn');
        const themeToggle = document.getElementById('themeToggle');
        const exportBtn = document.getElementById('exportBtn');
        const totalVehiclesEl = document.getElementById('totalVehicles');
        const totalValueEl = document.getElementById('totalValue');
        const categoriesCountEl = document.getElementById('categoriesCount');
        const favoritesCountEl = document.getElementById('favoritesCount');
        const quickViewModal = document.getElementById('quickViewModal');
        const modalClose = document.getElementById('modalClose');
        const modalContent = document.getElementById('modalContent');

        // Initialize theme from localStorage or default to dark
        const currentTheme = localStorage.getItem('theme') || 'dark';
        document.body.setAttribute('data-theme', currentTheme);
        updateThemeIcon();

        // Event Listeners
        catSelect.addEventListener('change', function() {
            eventQtyContainer.classList.toggle('hidden', this.value !== 'EVENT');
        });

        searchBar.addEventListener('input', afficherCatalogue);

        loginBtn.addEventListener('click', verifyPassword);
        guestBtn.addEventListener('click', continueAsGuest);
        passwordInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') verifyPassword();
        });

        themeToggle.addEventListener('click', toggleTheme);
        exportBtn.addEventListener('click', exportCatalog);
        modalClose.addEventListener('click', () => {
            quickViewModal.style.display = 'none';
        });

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === quickViewModal) {
                quickViewModal.style.display = 'none';
            }
        });

        // Functions
        function toggleTheme() {
            const currentTheme = document.body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            document.body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon();
        }

        function updateThemeIcon() {
            const currentTheme = document.body.getAttribute('data-theme');
            const icon = themeToggle.querySelector('i');
            
            if (currentTheme === 'dark') {
                icon.className = 'fas fa-moon';
            } else {
                icon.className = 'fas fa-sun';
            }
        }

        function updateStats() {
            totalVehiclesEl.textContent = vehicules.length;
            
            const totalValue = vehicules.reduce((sum, vehicle) => sum + (vehicle.prix || 0), 0);
            totalValueEl.textContent = `$${totalValue.toLocaleString()}`;
            
            const uniqueCategories = new Set(vehicules.map(v => v.cat));
            categoriesCountEl.textContent = uniqueCategories.size;
            
            favoritesCountEl.textContent = favorites.length;
        }

        function showMessage(message, type) {
            const icon = type === 'error' ? 'exclamation-triangle' : 
                         type === 'success' ? 'check-circle' : 'info-circle';
            
            messageContainer.innerHTML = `
                <div class="message message-${type}">
                    <i class="fas fa-${icon}"></i>
                    <span>${message}</span>
                </div>
            `;
            
            setTimeout(() => {
                messageContainer.innerHTML = '';
            }, 5000);
        }

        function continueAsGuest() {
            mode = 'guest';
            overlay.classList.add('hidden');
            renderCategories();
            afficherCatalogue();
            updateStats();
            showMessage('Welcome to Rider Motors!', 'success');
        }

        function verifyPassword() {
            const pw = passwordInput.value;
            
            if (pw === 'Sa2008$am$') {
                mode = 'owner';
                overlay.classList.add('hidden');
                formContainer.classList.remove('hidden');
                renderCategories();
                afficherCatalogue();
                updateStats();
                showMessage('Admin login successful! Welcome to Rider Motors.', 'success');
            } else {
                showMessage('Incorrect password. Please try again.', 'error');
                passwordInput.focus();
            }
        }

        function ajouterVehicule() {
            if (mode !== 'owner') return;
            
            const titre = titreInput.value.trim();
            if (!titre) {
                showMessage('Please provide a vehicle title.', 'error');
                titreInput.focus();
                return;
            }
            
            const desc = descInput.value.trim();
            const prix = Number(prixInput.value) || 0;
            const cat = catSelect.value;
            
            if (!cat) {
                showMessage('Please select a category.', 'error');
                catSelect.focus();
                return;
            }
            
            const qty = (cat === 'EVENT') ? Number(eventQty.value) || 0 : null;
            
            if (imageInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    saveVehicule(titre, desc, prix, cat, e.target.result, qty);
                };
                reader.readAsDataURL(imageInput.files[0]);
            } else {
                saveVehicule(titre, desc, prix, cat, '', qty);
            }
        }

        function saveVehicule(titre, desc, prix, cat, img, qty) {
            if (editingId) {
                // Edit existing vehicle
                const index = vehicules.findIndex(v => v.id === editingId);
                if (index !== -1) {
                    vehicules[index] = {
                        id: editingId,
                        titre,
                        desc,
                        prix,
                        cat,
                        img: img || vehicules[index].img,
                        qty
                    };
                }
                editingId = null;
                saveButton.innerHTML = '<i class="fas fa-save"></i> Save Vehicle';
                cancelButton.classList.add('hidden');
                formTitle.textContent = 'Add Vehicle';
                showMessage('Vehicle updated successfully!', 'success');
            } else {
                // Add new vehicle
                vehicules.unshift({ 
                    id: Date.now(), 
                    titre, 
                    desc, 
                    prix, 
                    cat, 
                    img, 
                    qty 
                });
                showMessage('Vehicle added successfully!', 'success');
            }
            
            localStorage.setItem('vehicules', JSON.stringify(vehicules));
            resetForm();
            afficherCatalogue();
            updateStats();
        }

        function resetForm() {
            titreInput.value = '';
            descInput.value = '';
            prixInput.value = '';
            catSelect.value = '';
            eventQty.value = '';
            eventQtyContainer.classList.add('hidden');
            imageInput.value = '';
        }

        function editVehicule(id) {
            const vehicule = vehicules.find(v => v.id === id);
            if (!vehicule) return;
            
            titreInput.value = vehicule.titre;
            descInput.value = vehicule.desc;
            prixInput.value = vehicule.prix;
            catSelect.value = vehicule.cat;
            eventQty.value = vehicule.qty || '';
            eventQtyContainer.classList.toggle('hidden', vehicule.cat !== 'EVENT');
            
            editingId = id;
            saveButton.innerHTML = '<i class="fas fa-edit"></i> Update Vehicle';
            cancelButton.classList.remove('hidden');
            formTitle.textContent = 'Edit Vehicle';
            
            formContainer.scrollIntoView({ behavior: 'smooth' });
        }

        function cancelEdit() {
            editingId = null;
            saveButton.innerHTML = '<i class="fas fa-save"></i> Save Vehicle';
            cancelButton.classList.add('hidden');
            formTitle.textContent = 'Add Vehicle';
            resetForm();
        }

        function toggleFavorite(id) {
            const index = favorites.indexOf(id);
            if (index === -1) {
                favorites.push(id);
                showMessage('Vehicle added to favorites!', 'success');
            } else {
                favorites.splice(index, 1);
                showMessage('Vehicle removed from favorites!', 'success');
            }
            localStorage.setItem('favorites', JSON.stringify(favorites));
            afficherCatalogue();
            updateStats();
        }

        function showQuickView(id) {
            const vehicule = vehicules.find(v => v.id === id);
            if (!vehicule) return;
            
            const hasImage = vehicule.img && vehicule.img !== '';
            
            modalContent.innerHTML = `
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
                    <div>
                        ${hasImage ? 
                            `<img src="${vehicule.img}" alt="${vehicule.titre}" style="width: 100%; border-radius: var(--radius);">` :
                            `<div class="vehicle-image" style="width: 100%; height: 300px; border-radius: var(--radius);"></div>`
                        }
                    </div>
                    <div>
                        <h2 style="color: var(--primary); margin-bottom: 15px;">${vehicule.titre}</h2>
                        <div style="background: var(--primary); color: white; display: inline-block; padding: 5px 15px; border-radius: 20px; margin-bottom: 15px;">
                            ${vehicule.cat}
                        </div>
                        <p style="color: var(--text-secondary); margin-bottom: 20px; line-height: 1.6;">${vehicule.desc}</p>
                        <div style="font-size: 2rem; font-weight: 800; color: var(--primary); margin-bottom: 10px;">
                            $${vehicule.prix.toLocaleString()}
                        </div>
                        ${vehicule.cat === 'EVENT' && vehicule.qty ? 
                            `<div style="color: var(--warning); margin-bottom: 20px;">
                                <i class="fas fa-exclamation-circle"></i> Limited quantity: ${vehicule.qty}
                            </div>` : ''}
                        <div style="margin-top: 30px;">
                            <button class="btn-primary" onclick="editVehicule(${vehicule.id}); quickViewModal.style.display='none';" ${mode !== 'owner' ? 'disabled style="opacity: 0.5;"' : ''}>
                                <i class="fas fa-edit"></i> Edit Vehicle
                            </button>
                        </div>
                    </div>
                </div>
            `;
            
            quickViewModal.style.display = 'flex';
        }

        function renderCategories() {
            categoriesContainer.innerHTML = '';
            
            // All button
            const allBtn = document.createElement('button');
            allBtn.className = `category-btn ${activeCategory === 'All' ? 'active' : ''}`;
            allBtn.innerHTML = '<i class="fas fa-layer-group"></i> All Vehicles';
            allBtn.onclick = () => {
                activeCategory = 'All';
                renderCategories();
                afficherCatalogue();
            };
            categoriesContainer.appendChild(allBtn);
            
            // Categories
            categories.forEach(c => {
                const btn = document.createElement('button');
                btn.className = `category-btn ${c === activeCategory ? 'active' : ''}`;
                btn.innerHTML = `<i class="fas fa-tag"></i> ${c}`;
                btn.onclick = () => {
                    activeCategory = c;
                    renderCategories();
                    afficherCatalogue();
                };
                categoriesContainer.appendChild(btn);
            });
        }

        function afficherCatalogue() {
            listeDiv.innerHTML = '';
            
            const q = searchBar.value.toLowerCase();
            let list = vehicules.filter(v => 
                v.titre.toLowerCase().includes(q) || 
                v.desc.toLowerCase().includes(q) ||
                v.cat.toLowerCase().includes(q)
            );
            
            if (activeCategory !== 'All') {
                list = list.filter(v => v.cat === activeCategory);
            }
            
            if (list.length === 0) {
                listeDiv.innerHTML = `
                    <div style="grid-column:1/-1; text-align:center; padding:60px 20px; color:var(--text-secondary);">
                        <i class="fas fa-search" style="font-size:3rem; margin-bottom:20px;"></i>
                        <h3 style="margin-bottom:10px;">No vehicles found</h3>
                        <p>${vehicules.length === 0 ? 'Start by adding your first vehicle!' : 'Try adjusting your search or filter'}</p>
                    </div>
                `;
                return;
            }
            
            list.forEach(v => {
                const card = document.createElement('div');
                card.className = 'vehicle-card';
                
                const hasImage = v.img && v.img !== '';
                
                const imgContainer = document.createElement('div');
                imgContainer.className = 'vehicle-image';
                
                if (hasImage) {
                    const img = document.createElement('img');
                    img.src = v.img;
                    img.alt = v.titre;
                    img.style.width = '100%';
                    img.style.height = '100%';
                    img.style.objectFit = 'cover';
                    imgContainer.appendChild(img);
                }
                
                const content = document.createElement('div');
                content.className = 'vehicle-content';
                
                // Favorite button
                const favoriteBtn = document.createElement('button');
                favoriteBtn.className = `favorite-btn ${favorites.includes(v.id) ? 'active' : ''}`;
                favoriteBtn.innerHTML = '<i class="fas fa-heart"></i>';
                favoriteBtn.onclick = (e) => {
                    e.stopPropagation();
                    toggleFavorite(v.id);
                };
                card.appendChild(favoriteBtn);
                
                // Quick view button
                const quickViewBtn = document.createElement('button');
                quickViewBtn.className = 'quick-view-btn';
                quickViewBtn.innerHTML = '<i class="fas fa-expand"></i>';
                quickViewBtn.onclick = (e) => {
                    e.stopPropagation();
                    showQuickView(v.id);
                };
                card.appendChild(quickViewBtn);
                
                const category = document.createElement('div');
                category.className = 'vehicle-category';
                category.innerText = v.cat;
                
                const title = document.createElement('h3');
                title.className = 'vehicle-title';
                title.innerText = v.titre;
                
                const description = document.createElement('p');
                description.className = 'vehicle-description';
                description.innerText = v.desc;
                
                const price = document.createElement('div');
                price.className = 'vehicle-price';
                price.innerText = `$${v.prix.toLocaleString()}`;
                
                content.appendChild(category);
                content.appendChild(title);
                content.appendChild(description);
                content.appendChild(price);
                
                if (v.cat === 'EVENT' && v.qty) {
                    const qty = document.createElement('div');
                    qty.className = 'vehicle-qty';
                    qty.innerHTML = `<i class="fas fa-exclamation-circle"></i> Limited quantity: ${v.qty}`;
                    content.appendChild(qty);
                }
                
                if (mode === 'owner') {
                    const actions = document.createElement('div');
                    actions.className = 'vehicle-actions';
                    
                    const editBtn = document.createElement('button');
                    editBtn.className = 'action-btn edit-btn';
                    editBtn.innerHTML = '<i class="fas fa-edit"></i> Edit';
                    editBtn.onclick = () => editVehicule(v.id);
                    
                    const deleteBtn = document.createElement('button');
                    deleteBtn.className = 'action-btn delete-btn';
                    deleteBtn.innerHTML = '<i class="fas fa-trash"></i> Delete';
                    deleteBtn.onclick = () => {
                        if (confirm(`Are you sure you want to delete "${v.titre}"?`)) {
                            vehicules = vehicules.filter(x => x.id !== v.id);
                            // Remove from favorites if it was there
                            const favIndex = favorites.indexOf(v.id);
                            if (favIndex !== -1) {
                                favorites.splice(favIndex, 1);
                                localStorage.setItem('favorites', JSON.stringify(favorites));
                            }
                            localStorage.setItem('vehicules', JSON.stringify(vehicules));
                            afficherCatalogue();
                            updateStats();
                            showMessage('Vehicle deleted successfully!', 'success');
                        }
                    };
                    
                    actions.appendChild(editBtn);
                    actions.appendChild(deleteBtn);
                    content.appendChild(actions);
                }
                
                card.appendChild(imgContainer);
                card.appendChild(content);
                listeDiv.appendChild(card);
            });
        }

        function exportCatalog() {
            const dataStr = JSON.stringify(vehicules, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'rider-motors-catalog.json';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            
            showMessage('Catalog exported successfully!', 'success');
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderCategories();
            updateStats();
            
            // Event listeners for buttons
            saveButton.addEventListener('click', ajouterVehicule);
            cancelButton.addEventListener('click', cancelEdit);
        });
    </script>
</body>
</html>
